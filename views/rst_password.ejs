<h1>Reset password</h1>
<%- include ('./partials/messages') %>

    <form action="/userop/rst_password" method="POST">
        <div>
            <label for="original_password">original password</label>
            <input type="password" name="original_password" placeholder="Enter original password" />
        </div>
        <div>
            <label for="new_password">New Password</label>
            <input type="password" name="new_password" placeholder="Enter New Password" />
        </div>
        <div>
            <label for="c_password">Confirm Password</label>
            <input type="password" name="c_password" placeholder="Enter New Password again" />
        </div>
        <button type="submit" class="btn btn-primary btn-lock">Reset</button>
    </form>
    <form action="/dashboard">
        <input type="submit" value="Back to dashboard">
    </form>